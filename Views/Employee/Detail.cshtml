<h1>Employee Details</h1>

<table class="table table-bordered">
    <tr>
        <th>First Name</th>
        <td>@Model.FirstName</td>
    </tr>
    <tr>
        <th>Last Name</th>
        <td>@Model.LastName</td>
    </tr>
    <tr>
        <th>Email</th>
        <td>@Model.Email</td>
    </tr>
    <tr>
        <th>Department</th>
        <td>@Model.Department</td>
    </tr>
    <tr>
        <th>Hire Date</th>
        <td>@Model.HireDate.ToString("yyyy-MM-dd")</td> 
    </tr>
    <tr>
        <th>Salary</th>
        <td>$@Model.Salary</td>
    </tr>
</table>

<a asp-action="Index" class="btn btn-outline-primary btn-sm">Back to Employee List</a>
