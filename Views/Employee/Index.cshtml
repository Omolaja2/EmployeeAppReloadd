@model Presentation.Models.ListEmployeeViewModel

@{
    ViewData["Title"] = "Employee";
}

<h1>@ViewData["Title"]</h1>

<a asp-action="Create" class="btn btn-outline-success">+ Create New Employee</a>
<hr />

@if (Model?.Employee == null || !Model.Employee.Any())
{
    <p class="text-danger">No records available!</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Hire Date</th>
                <th>Salary</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Employee)
            {
                <tr>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.Email</td>
                    <td>@item.HireDate.ToShortDateString()</td>
                    <td>@item.Salary.ToString("C")</td>
                    <td>
                        <div class="btn-group">
                            <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm">Detail</a>
                            <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-sm">Edit</a>
                            <form asp-action="Delete" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Are you sure?');">
                                <button type="submit" class="btn btn-outline-danger btn-sm">Delete</button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
