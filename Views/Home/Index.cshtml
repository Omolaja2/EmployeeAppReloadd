@{
    ViewData["Title"] = "Home";
}
<div class="container py-5">
    
    <div class="row align-items-center mb-5">
        <div class="col-lg-6 text-center text-lg-start">
            <h1 class="display-4 fw-bold mb-3">
                Welcome to <span class="text-primary">Employee Manager</span>
            </h1>
            @if (User.Identity != null && User.Identity.IsAuthenticated)
            {
                <p class="lead text-muted mb-4">
                    Hello <strong>@User.Identity.Name</strong>! You're logged in and ready to manage your team.
                </p>
                <div class="d-flex flex-wrap gap-3 justify-content-center justify-content-lg-start">
                    <a asp-controller="Employee" asp-action="Index" class="btn btn-primary px-4 py-2">
                        <i class="fas fa-users me-2"></i> View Employees
                    </a>
                    <a asp-controller="Account" asp-action="Logout" class="btn btn-outline-danger px-4 py-2">
                        <i class="fas fa-sign-out-alt me-2"></i> Logout
                    </a>
                </div>
            }
            else
            {
                <p class="lead text-muted mb-4">
                    Start managing your team by logging in or creating an account.
                </p>
                <div class="d-flex flex-wrap gap-3 justify-content-center justify-content-lg-start">
                    <a asp-controller="Account" asp-action="Login" class="btn btn-primary px-4 py-2">
                        <i class="fas fa-sign-in-alt me-2"></i> Login
                    </a>
                    <a asp-controller="Account" asp-action="Register" class="btn btn-success px-4 py-2">
                        <i class="fas fa-user-plus me-2"></i> Register
                    </a>
                </div>
            }
        </div>

        <div class="col-lg-6 text-center">
            <img src="https://cdn-icons-png.flaticon.com/512/1046/1046869.png" class="img-fluid" alt="Team illustration" style="max-height: 300px;" />
        </div>
    </div>

    <div class="row text-center mb-5">
        <div class="col-md-4 mb-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <i class="fas fa-users fa-2x text-primary mb-3"></i>
                    <h5 class="card-title">Total Employees</h5>
                    <p class="display-6 fw-bold">20</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <i class="fas fa-building fa-2x text-success mb-3"></i>
                    <h5 class="card-title">Departments</h5>
                    <p class="display-6 fw-bold">10</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <i class="fas fa-user-plus fa-2x text-warning mb-3"></i>
                    <h5 class="card-title">New Hires (This Month)</h5>
                    <p class="display-6 fw-bold">8</p>
                </div>
            </div>
        </div>
    </div>

   
    <div class="row mb-5">
        <h4 class="mb-3">Quick Actions</h4>
        <div class="d-flex flex-wrap gap-3">
            <a asp-controller="Employee" asp-action="Create" class="btn btn-outline-primary">
                <i class="fas fa-user-plus me-2"></i> Add New Employee
            </a>
            <a asp-controller="Department" asp-action="Create" class="btn btn-outline-success">
                <i class="fas fa-plus me-2"></i> Add Department
            </a>
            <a asp-controller="Account" asp-action="Profile" class="btn btn-outline-secondary">
                <i class="fas fa-user-circle me-2"></i> View Profile
            </a>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-12">
            <h4 class="mb-3">📢 Announcements</h4>
            <ul class="list-group">
                <li class="list-group-item">
                    🎉 <strong>New feature:</strong> 2 Verification.
                </li>
                <li class="list-group-item">
                    ✅ Monthly report for June is ready for download.
                </li>
                <li class="list-group-item">
                    📅 Upcoming: HR meeting scheduled for Friday 12th at 10AM.
                </li>
            </ul>
        </div>
    </div>
</div>
