@{
    ViewData["Title"] = "Department Details";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-bordered">
    <tr>
        <th>Department Name</th>
        <td>@Model.Name</td> 
    </tr>
    <tr>
        <th>Description</th>
        <td>@Model.Description</td>
    </tr>
    <tr>
        <th>Id</th>
        <td>@Model.Id</td>
    </tr>
</table>

<a asp-action="Index" class="btn btn-outline-primary btn-sm">Back to Department List</a>
