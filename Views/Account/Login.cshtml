@model Presentation.Models.AccountVM.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <h2>Login</h2>

    <form asp-action="Login" method="post">
        <div class="mb-3">
            <label asp-for="Email" class="form-label">Email Address</label>
            <input asp-for="Email" class="form-control" placeholder="Enter your email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Password" class="form-label">Password</label>
            <input asp-for="Password" class="form-control" placeholder="Enter password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="mb-3 form-check">
            <input asp-for="RememberMe" class="form-check-input" />
            <label asp-for="RememberMe" class="form-check-label">Remember Me</label>
        </div>
        <a asp-action="ForgotPassword">Forgot your password?</a><br />
        <button type="submit" class="btn btn-primary">Login</button>
        
        <div class="mt-3">
            <a asp-action="Register">Donâ€™t have an account? Register</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
