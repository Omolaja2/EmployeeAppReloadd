@model Presentation.Models.AccountVM.Verify2faViewModel

@{
    ViewData["Title"] = "Two-Factor Authentication";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center text-primary">Two-Factor Authentication üîê</h2>
            <p class="text-muted text-center">A security code was sent to your email.</p>

            <form asp-action="Verify2fa" method="post">
                <div class="mb-3">
                    <label asp-for="Code" class="form-label">Security Code</label>
                    <input asp-for="Code" class="form-control text-center" maxlength="6" autocomplete="one-time-code" />
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>

                <input type="hidden" asp-for="RememberMe" />

                <button type="submit" class="btn btn-primary w-100">Verify</button>
            </form>

            <div class="text-center mt-3">
                <form asp-action="Resend2faCode" method="post">
                    <input type="hidden" asp-for="RememberMe" />
                    <button type="submit" class="btn btn-link">Didn't receive the code? Resend</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
